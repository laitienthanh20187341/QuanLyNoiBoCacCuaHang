extends ../index

block content
    h1 Update user
    a.btn.btn-primary(href="/customer/changepassword/"+customer[0].id) Change Password
    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="", method="POST")
        .form-group
            label(for="username") Name
            input#username.form-control(type="text", name="name", value=customer ? customer[0].name : "")
        .form-group
            label(for="name") Email
            input#name.form-control(type="text", name="email", value=customer ? customer[0].email : '')
        .form-group
            label(for="phone") Phone
            input#phone.form-control(type="number", name="phone", value=customer ? customer[0].phone : '')        


        button(class="btn btn-primary") Update
