html
    head
        link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
        link(rel="stylesheet", href="/styles/custom.css")
    body
        nav.navbar.navbar-expand-lg.navbar-light.bg-light
            a.navbar-brand(href='#') Ocean Gate
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarNav.collapse.navbar-collapse
                ul.navbar-nav
                    li.nav-item
                        a.nav-link(href='/') Home
                    li.nav-item
                        a.nav-link(href='/auth/login') Admin
                if (!session.customerId)    
                    li.nav-item(style= 'list-style:none;')
                        a.nav-link(href='/customer/register') Register
                    li.nav-item(style= 'list-style:none;')
                        a.nav-link(href='/customer/login') Login    
                else 
                    li.nav-item(style= 'list-style:none;')
                        a(href='/customer/edit/'+ session.customerId)= session.customerName
                    li.nav-item(style= 'list-style:none;')
                        a.nav-link(href='/customer/logout') Logout     
        .container.pt-5
            block content


