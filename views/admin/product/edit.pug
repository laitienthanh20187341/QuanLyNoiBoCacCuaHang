extends ../index

block content
    h1 Update Product

    if errors
        each error in errors
            .alert.alert-danger= error

    form(action="", method="POST", enctype="multipart/form-data")
        .form-group
            label(for="name") Name
            input#name.form-control(type="text", name="name", value=products ? products[0].name : '')
        .form-group
            label(for="price") Price
            input#price.form-control(type="number", name="price", value=products ? products[0].price : '')
        .form-group
            label(for="quantity") Quantity
            input#quantity.form-control(type="number", name="quantity", value=products ? products[0].quantity : '') 
        .form-group
            label(for="picture") Picture
            input#pciture.form-control-file(type="file", name="picture")                 

        button(class="btn btn-primary") Update
